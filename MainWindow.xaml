<Window x:Class="Toolbar_Ex.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Toolbar_Ex"
        mc:Ignorable="d"
        Title="Toolbar example" Height="450" Width="800">
  <DockPanel VerticalAlignment="Top">
		<ToolBar Height="30" DockPanel.Dock="Top">
			<Button Content="Start" Click="btStart_Click"/>
			<Button Command="Copy">
				<Image Source="/Icons/Copy.png"/>
			</Button>
			<Button Command="Cut">
				<Image Source="/Icons/Cut.png"/>
			</Button>
			<Button Command="Paste">
				<Image Source="/Icons/Paste.png"/>
			</Button>
		</ToolBar>
		
	</DockPanel>
</Window>
